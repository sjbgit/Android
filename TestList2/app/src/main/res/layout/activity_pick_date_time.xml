<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sbunke.testlist2.PickDateTime">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateTimePickMessage"
        android:layout_alignParentEnd="false" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tpTimePicker"
        android:layout_toEndOf="@+id/tvDateTimePickMessage"
        android:layout_toStartOf="@+id/tpTimePicker"
        android:layout_below="@+id/dpDatePicker"
        android:layout_alignStart="@+id/dpDatePicker" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dpDatePicker"
        android:layout_toEndOf="@+id/tvDateTimePickMessage"
        android:calendarViewShown="false"
        android:layout_below="@+id/dpDatePicker"
        android:layout_alignStart="@+id/dpDatePicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btnDateTimeSelected"
        android:layout_below="@+id/tpTimePicker"
        android:layout_alignStart="@+id/tpTimePicker"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/tpTimePicker" />

</LinearLayout>
